<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                    <img src="@Url.Content("~/Content/Images/Logo.png")" class="navbar-brand" alt="Logo" id="logo" />
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>
                All rights reserverd &copy; @DateTime.Now.Year - ¡Pura Vida! Hotel reservations || Another <a href="https://www.facebook.com/oscar.gonzalez.946179">M&M</a> Design <img src="@Url.Content("~/Content/Images/LeftLogo.png")" ID="LeftLogo"/>
            </p>
            <div >
                <a href="https://www.facebook.com/oscar.gonzalez.946179"><img src="Content/Images/Socials/fb2.png" class="grayscale"/></a>
                <img src="@Url.Content("Content/Images/Socials/twitter2.png")" class="grayscale"/>
                <img src="@Url.Content("Content/Images/Socials/gp.png")" class="grayscale"/>
                <img src="@Url.Content("Content/Images/Socials/linkein.png")" class="grayscale"/>
                <img src="@Url.Content("Content/Images/Socials/pinterest.png")" class="grayscale"/>
                <img src="@Url.Content("Content/Images/Socials/skype.png")" class="grayscale"/>
                <img src="@Url.Content("Content/Images/Socials/yt.png")" class="grayscale"/>
            </div>        
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>